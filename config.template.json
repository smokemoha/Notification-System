{
    "github": {
        "users_to_monitor": [
            "user1",
            "user2"
        ],
        "check_interval_minutes": 60,
        "api_token": "YOUR_GITHUB_API_TOKEN"
    },
    "email": {
        "enabled": true,
        "smtp_server": "smtp.example.com",
        "smtp_port": 587,
        "sender_email": "your-email@example.com",
        "sender_password": "YOUR_EMAIL_PASSWORD",
        "recipient_email": "recipient@example.com",
        "subject_template": "New GitHub Repository Alert: {repo_name}",
        "body_template": "<html><body><h2>New GitHub Repository Created</h2><p>User <b>{username}</b> has created a new repository:</p><h3>{repo_name}</h3><p>{repo_description}</p><p>View it here: <a href=\"{repo_url}\">{repo_url}</a></p><p>Created on: {created_date}</p></body></html>"
    }
}